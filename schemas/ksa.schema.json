{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Sapience KSA",
    "type": "object",
    "required": [
      "ksa_id",
      "label",
      "category",
      "description",
      "sector",
      "horizon",
      "proficiency_levels"
    ],
    "additionalProperties": false,
  
    "properties": {
    "ksa_id":             { "type": "string", "pattern": "^[a-z0-9_]+$" },
    "label":              { "type": "string" },
    "category":           { "type": "string" },
    "description":        { "type": "string" },
    "sector":             { "type": "string", "enum": [
        "agriculture_natural_resources",
        "mining_extraction",
        "energy_utilities",
        "construction_infrastructure",
        "manufacturing",
        "wholesale_retail_trade",
        "transportation_logistics",
        "core_it_cloud",
        "ai_data_quantum",
        "media_arts_entertainment",
        "telecommunications",
        "finance_insurance",
        "real_estate_property",
        "professional_scientific_services",
        "administrative_support_services",
        "education_training",
        "healthcare_social_assistance",
        "government_public_admin",
        "public_safety_security",
        "nonprofit_ngos",
        "hospitality_tourism",
        "arts_recreation_services",
        "personal_other_services",
        "skilled_trades",
        "creative_cultural_industries",
        "customer_experience_service",
        "env_energy_advanced",
        "space_economy_aerospace",
        "biotechnology_synbio",
        "gig_platform_economy",
        "blockchain_web3",
        "immersive_media_arvr",
        "informal_gray_economy",
        "unpaid_caregiving_domestic_work",
        "maker_economy_creative_crafts",
        "digital_content_creator_economy",
        "cross_sector" ] },
    "horizon":            { "type": "string", "enum": ["core","emerging","watch_2030","perennial","peripheral"] },
    "proficiency_levels": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "level":     { "type": "string" },
          "indicator": { "type": "string" }
        },
        "required": ["level","indicator"]
      }
    },
      "cluster_tags": {
     "type": "array",
     "items": { "type": "string" }
  },
      "source_frameworks": {
        "type": "array",
        "items": { "type": "string" },
        "uniqueItems": true
      }
    }
  }
  